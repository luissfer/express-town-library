extends layout

block content

  h1 #{title}: #{book.name}
  p= book.lifespan

  if instance_books.length

    p #[strong Delete the following Instance books before attempting to delete this Book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Instance Books
      dl
        each instance in instance_books
          dt
            a(href=instance.url) #{instance.imprint}
          dd #{book.status}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete